<h1>Tagebuches</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Menge</th>
      <th>Eiweiß</th>
      <th>Fett</th>
      <th>Kohlenhydrate</th>
      <th>Kalorien</th>
      <th>Anzahl</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tagebuches.each do |tagebuch| %>
      <tr>
        <td><%= @lebensmittel.name %></td>
        <td><%= rechnen_menge(@lebensmittel, tagebuch) %></td>
        <td><%= rechnen_eiweiß(@lebensmittel, tagebuch) %></td>
        <td><%= rechnen_fett(@lebensmittel, tagebuch) %></td>
        <td><%= rechnen_kh(@lebensmittel, tagebuch) %></td>
        <td><%= rechnen_kalorien(@lebensmittel, tagebuch) %></td>
        <td><%= tagebuch.anzahl %></td>
        <td><%= link_to 'Show', lebensmittel_tagebuch_path(@lebensmittel.id, tagebuch.id) %></td>
        <td><%= link_to 'Edit', edit_lebensmittel_tagebuch_path(@lebensmittel, tagebuch.id) %></td>
        <td><%= link_to 'Destroy', lebensmittel_tagebuch_path(@lebensmittel.id, tagebuch.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tagebuch', new_lebensmittel_tagebuch_path %>
