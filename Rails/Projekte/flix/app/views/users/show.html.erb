<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<% if @favorite_movie.any? %>

		<h3>Favorite Movies</h3>
			<p>
				<ul>
					<% @favorite_movie.each do |movie| %>
						<li><%= movie.title %></li>
					<% end %>
				</ul>
			</p>
<% end %>

