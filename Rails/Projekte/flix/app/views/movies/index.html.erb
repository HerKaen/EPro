<h1>Movies</h1>

<table border="1">
		<tr>
			<th>Title</th>
			<th>Rating</th>
			<th>Kostet</th>
			<th>Beschreibung</th>
			<th>Erscheinung</th>
			<th>Show</th>
			<th>Edit</th>
		</tr>

			<% @movies.each do |movie| %>
		
		<tr>
			<td><%= movie.title %></td>
			<td><%= movie.rating %></td>	
			<td><%= format_price(movie.total_gross) %></td>
			<td><%= truncate(movie.description, length: 40) %></td>
			<td><%= movie.released_on %></td>	
			<td><%= link_to "Show", movie_path(movie.id) %></td>
			<td><%= link_to "Edit", edit_movie_path(movie.id) %></td>
		</tr>
			<% end %>
</table>

<p><%= link_to "Neuen Datensatz", new_movie_path %></p> 