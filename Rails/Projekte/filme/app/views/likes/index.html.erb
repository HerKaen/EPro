<h1>Likes</h1>

<table>
  <thead>
    <tr>
      <th>Quality</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @likes.each do |like| %>
      <tr>
        <td><%= like.quality %></td>
        <td><%= link_to 'Show', film_like_path(@film.id, like.id) %></td>
        <td><%= link_to 'Edit', edit_film_like_path(@film.id, like.id) %></td>
        <td><%= link_to 'Destroy', film_like_path(@film.id, like.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Like', new_film_like_path %>
