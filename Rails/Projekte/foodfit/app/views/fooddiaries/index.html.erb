<div class="foods">
<h1>Lebensmittel-Tagebuch</h1>

<table border="2" style="width:80%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Menge</th>
      <th>Eiweiß</th>
      <th>Fett</th>
      <th>Kohlenhydrate</th>
      <th>Kalorien</th>
      <th>Datum</th>
      <th colspan="2" style="text-align:center; width:20%">Optionen</th>
    </tr>
  </thead>

  <tbody>
    <% @fooddiaries.each do |fooddiary| %>
      <tr>
        <td><%= @food.name %></td>
        <td><%= fooddiary.anzahl %></td>
        <td><%= rechnen_eiweiß(@food, fooddiary) %></td>
        <td><%= rechnen_fett(@food, fooddiary) %></td>
        <td><%= rechnen_kh(@food, fooddiary) %></td>
        <td><%= rechnen_kalorien(@food, fooddiary) %></td>
        <td><%= fooddiary.datum %></td>
        <td><%= link_to 'Bearbeiten', edit_food_fooddiary_path(@food.id, fooddiary.id), class: 'warning button' %></td>
        <td><%= link_to 'Löschen', food_fooddiary_path(@food.id, fooddiary.id), class: 'alert button', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "Zurück zur Übersicht", foods_path, class: 'secondary button' %> 

</div>