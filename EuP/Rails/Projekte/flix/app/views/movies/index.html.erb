<h1>Movies</h1>

<table border="1">
		<tr>
				<th>Title</th>
				<th>Rating</th>
				<th>Kostet</th>
				<th>Beschreibung</th>
				<th>Erscheinung</th>
			<% if current_user %>
				<th>Review</th>
				<th>Show</th>
			<% if current_user_admin? %>
				<th>Edit</th>
				<th>Delete</th>
			<% end %>
			<% end %>
		</tr>

			<% @movies.each do |movie| %>
		
		<tr>
				<td><%= movie.title %></td>
				<td><%= movie.rating %></td>	
				<td><%= format_price(movie.total_gross) %></td>
				<td><%= truncate(movie.description, length: 40) %></td>
				<td><%= movie.released_on %></td>
			<% if current_user %>
				<td><%= link_to "Review", movie_reviews_path(movie.id) %></td> 	
				<td><%= link_to "Show", movie_path(movie.id) %></td>
			<% if current_user_admin? %>
				<td><%= link_to "Edit", edit_movie_path(movie.id) %></td>
				<td><%= link_to "Delete", movie_path(movie.id), method: :delete, data: { confirm: 'Wirklich lÃ¶schen?' } %></td> 
			<% end %>
			<% end %>
		</tr>
			<% end %>
</table>

<p><%= link_to "Neuen Datensatz", new_movie_path if current_user_admin? %></p>  